  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
  <script>
    // Disable copy & shortcuts
    document.addEventListener('contextmenu', e => e.preventDefault());
    document.addEventListener('keydown', e => {
      if (e.ctrlKey && ['c','u','s'].includes(e.key.toLowerCase())) e.preventDefault();
    });

    const map = L.map('map').setView([7.8731, 80.7718], 7);
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; OpenStreetMap contributors'
    }).addTo(map);

    function analyzeRegion() {
      const region = document.getElementById('region').value.trim();
      const focus = document.getElementById('focus').value;
      const resultBox = document.getElementById('result');
      let summary = "";

      if (!region || !focus) {
        summary = "Please fill out region and select a focus!";
        resultBox.style.color="#f87171";
        resultBox.innerText = summary;
        resultBox.style.display = "block";
        return;
      }

      if (focus === "climate") {
        summary = `üîé Analyzing historical and climate patterns for <b>${region}</b>...`;
      } else if (focus === "culture") {
        summary = `üîé Scanning cultural and historical insights for <b>${region}</b>...`;
      } else if (focus === "future") {
        summary = `üîÆ Projecting planetary and environmental impacts for <b>${region}</b>...`;
      }

      resultBox.innerHTML = summary;
      resultBox.style.color="#fbc02d";
      resultBox.style.display = "block";

      // Map fetch and marker
      fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(region)}`)
        .then(res => res.json())
        .then(data => {
          if (data.length > 0) {
            const { lat, lon, display_name } = data[0];
            map.setView([lat, lon], 10);
            L.marker([lat, lon]).addTo(map).bindPopup(`${display_name}`).openPopup();
          }
        });
    }

    // Translate
    function googleTranslateElementInit() {
      new google.translate.TranslateElement({
        pageLanguage: 'en',
        includedLanguages: 'en,si,ta',
        layout: google.translate.TranslateElement.InlineLayout.SIMPLE,
        autoDisplay: false
      }, 'google_translate_element');
    }
    document.getElementById('lang-btn').addEventListener('click', () => {
      document.querySelector('.goog-te-gadget-simple').click();
    });
  </script>
  <script src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
