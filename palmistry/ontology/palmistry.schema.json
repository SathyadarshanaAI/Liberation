{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PalmistrySchema",
  "type": "object",
  "properties": {
    "hand": { "type": "string", "enum": ["left", "right"] },
    "lines": {
      "type": "object",
      "properties": {
        "life":    { "$ref": "#/$defs/line" },
        "head":    { "$ref": "#/$defs/line" },
        "heart":   { "$ref": "#/$defs/line" },
        "fate":    { "$ref": "#/$defs/line" },
        "sun":     { "$ref": "#/$defs/line" },
        "marriage":{ "$ref": "#/$defs/line" },
        "health":  { "$ref": "#/$defs/line" },
        "manikanda":{ "$ref": "#/$defs/line" }
      },
      "additionalProperties": false
    },
    "traits": {
      "type": "object",
      "properties": {
        "mounts": { "type": "array", "items": { "type": "string" } },
        "marks":  { "type": "array", "items": { "type": "string" } }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "capture_date": { "type": "string", "format": "date-time" },
        "analyzer_version": { "type": "string" },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
      }
    }
  },
  "required": ["hand", "lines"],
  "$defs": {
    "line": {
      "type": "object",
      "properties": {
        "length": { "type": "number" },
        "clarity": { "type": "number" },
        "slope": { "type": "number" },
        "breaks": { "type": "integer" },
        "crosses": { "type": "integer" },
        "start": { "type": "string" },
        "end": { "type": "string" },
        "meaning": { "type": "string" }
      },
      "required": ["length", "clarity"]
    }
  }
}
